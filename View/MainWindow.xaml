<Window x:Class="wpfOs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfOs"
        xmlns:v="clr-namespace:wpfOs.View.Apps"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel>
        <Menu DockPanel.Dock="Top" Visibility="{Binding GlobalOsMenuVisibility}">

            <MenuItem Header="Sistēma">
                <MenuItem Header="Dashboard"
                        Command="{Binding SetDashboardViewModel}"/>
                <MenuItem Header="Iestatījumi"
                          Command="{Binding SetSettingsViewModel}"/>
                <Separator />
                <MenuItem Header="Slēgt kontu"
                        Command="{Binding LogoutCommand}"/>
                <MenuItem Header="Izslēgt"
                        Command="{Binding PoweroffCommand}"/>
            </MenuItem>

            <MenuItem Header="Faili">
                <MenuItem Header="Failu pārlūks"
                        Command="{Binding SetFileManagerViewModel}"/>
                <MenuItem Header="Jauns fails"
                        Command="{Binding SetTextEditorViewModel}"/>
            </MenuItem>

            <MenuItem Header="Mājaslapas"
                      Command="{Binding SetDomainManagementViewModel}"/>

            <MenuItem Header="Datubāzes"
                      Command="{Binding SetDatabaseManagementViewModel}"/>

            <MenuItem Header="Epasts"
                      Command="{Binding SetEmailManagementViewModel}"/>

            <MenuItem Header="Statistika"
                      Command="{Binding SetStatisticsViewModel}"/>

            <MenuItem Header="Rezerves kopijas"
                      Command="{Binding SetBackupManagementViewModel}"/>

        </Menu>
        <ContentControl DockPanel.Dock="Bottom" Content="{Binding CurrentViewModel}"/>
    </DockPanel>
</Window>
