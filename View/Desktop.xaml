<UserControl x:Class="wpfOs.View.Desktop"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpfOs.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <DockPanel>
        <Menu DockPanel.Dock="Top" Height="28">
            <MenuItem Header="Desktop"
                  Command=""/>

            <MenuItem Header="Izslēgt...">
                <MenuItem Header="Izslēgt"
                        Command=""/>
                <MenuItem Header="Slēgt kontu"
                        Command=""/>
                <MenuItem Header="Mainīt lietotāju"
                        Command=""/>
            </MenuItem>

            <MenuItem Header="Iestatījumi"
                    Command=""/>

            <MenuItem Header="Fails...">
                <MenuItem Header="Jauns fails"
                        Command=""/>
                <MenuItem Header="Saglabāt"
                        Command=""/>
                <MenuItem Header="Aizvērt"
                        Command=""/>
            </MenuItem>

            <MenuItem Header="Pārlūks"
                    Command=""/>

        </Menu>
        <ContentControl DockPanel.Dock="Top"
                    Margin="10"
                    Content="{Binding CurrentViewModel}"></ContentControl>
    </DockPanel>
</UserControl>
