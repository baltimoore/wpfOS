<UserControl x:Class="wpfOs.View.LoginForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpfOs.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Orientation="Vertical" Margin="20" VerticalAlignment="Center">
        <TextBlock FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" 
                   Text="Lietotājvārds"/>
        <TextBox Margin="0,16,0,0" FontSize="16" Width="350" HorizontalAlignment="Center"
                 Text="{Binding Username}"/>
        
        <TextBlock FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" 
                   Margin="0,25,0,0" Text="Parole"/>
        <PasswordBox Margin="0,16,0,0" FontSize="16" Width="350" HorizontalAlignment="Center"
                     PasswordChanged="OnPasswordChanged"/>
        
        <Button Margin="0,25,0,5" FontSize="16" Padding="10,5" HorizontalAlignment="Center"
                MinWidth="200" FontWeight="Bold"
                Content="Autentificēties" Command="{Binding UserAuthenticateCommand}" />

    </StackPanel>
</UserControl>
