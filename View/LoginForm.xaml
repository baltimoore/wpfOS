<UserControl x:Class="wpfOs.View.LoginForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpfOs.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Orientation="Vertical" Margin="20" VerticalAlignment="Center">
        <TextBlock
                FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"
                Text="Lietotājvārds"/>
        <TextBox FontSize="16" Width="350" HorizontalAlignment="Center"
                 Text="{Binding Username}"/>
        <TextBlock Margin="0,20,0,0"
                FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"
                Text="Parole"/>
        <PasswordBox FontSize="16" Width="350" HorizontalAlignment="Center"
                     Password="{Binding Password}"/>
        <Button Margin="0,20,0,0"
                FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Padding="10"
                Content="Autentificēties" Command="{Binding UserAuthenticateCommand}" />

    </StackPanel>
</UserControl>
