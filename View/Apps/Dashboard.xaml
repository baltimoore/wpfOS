<UserControl x:Class="wpfOs.View.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpfOs.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Dashboard" 
                   FontSize="36" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,20,0,30"/>
        
        <!-- Buttons Grid -->
        <UniformGrid Grid.Row="1" 
                     Rows="2" Columns="4" 
                     Margin="20">
            <!-- File Manager -->
            <Button Command="{Binding NavigateToFileManagerCommand}" 
                    Margin="10">
                <StackPanel Orientation="Vertical">
                    <Image Source="/Assets/Icons/file-browser.png"
                           Width="52" Height="52" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Failu pārlūks"
                               FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap"
                               HorizontalAlignment="Center" TextAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <!-- Domain Management -->
            <Button Command="{Binding NavigateToDomainManagementCommand}" 
                    Margin="10" >
                <StackPanel Orientation="Vertical">
                    <Image Source="/Assets/Icons/domains.png"
                           Width="52" Height="52" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Pārvaldītās mājaslapas"
                               FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap"
                               HorizontalAlignment="Center" TextAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <!-- Database Management -->
            <Button Command="{Binding NavigateToDatabaseManagementCommand}" 
                    Margin="10">
                <StackPanel Orientation="Vertical">
                    <Image Source="/Assets/Icons/database.png" 
                           Width="52" Height="52" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Datubāzes"
                               FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap"
                               HorizontalAlignment="Center" TextAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <!-- Email Management -->
            <Button Command="{Binding NavigateToEmailManagementCommand}" 
                    Margin="10" >
                <StackPanel Orientation="Vertical">
                    <Image Source="/Assets/Icons/email.png"
                           Width="52" Height="52" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Epasts"
                               FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap"
                               HorizontalAlignment="Center" TextAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <!-- Statistics -->
            <Button Command="{Binding NavigateToStatisticsCommand}" 
                    Margin="10" >
                <StackPanel Orientation="Vertical">
                    <Image Source="/Assets/Icons/statistics.png"
                           Width="52" Height="52" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Statistika"
                               FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap"
                               HorizontalAlignment="Center" TextAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <!-- Backup Management -->
            <Button Command="{Binding NavigateToBackupManagementCommand}" 
                    Margin="10">
                <StackPanel Orientation="Vertical">
                    <Image Source="/Assets/Icons/backup-restore.png"
                           Width="52" Height="52" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Rezerves kopijas"
                               FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap"
                               HorizontalAlignment="Center" TextAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <!-- Settings -->
            <Button Command="{Binding NavigateToSettingsCommand}" 
                    Margin="10">
                <StackPanel Orientation="Vertical">
                    <Image Source="/Assets/Icons/settings.png"
                           Width="52" Height="52" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Iestatījumi"
                               FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap"
                               HorizontalAlignment="Center" TextAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <!-- Placeholder for future expansion -->
            <Button Margin="10"
                    IsEnabled="False"
                    Opacity="0.5">
                <StackPanel Orientation="Vertical">
                    <Image Source="/Assets/Icons/more.png"
                           Width="52" Height="52" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="More"
                               FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap"
                               HorizontalAlignment="Center" TextAlignment="Center"/>
                </StackPanel>
            </Button>
        </UniformGrid>
    </Grid>
</UserControl>
