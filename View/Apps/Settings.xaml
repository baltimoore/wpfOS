<UserControl x:Class="wpfOs.View.Apps.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpfOs.View.Apps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Current User Info Section -->
        <Grid Grid.Column="0" Margin="20">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" 
                               Text="Sveicināti "/>
                    <TextBlock FontSize="28" HorizontalAlignment="Center" 
                           Text="{Binding CurrentUsername}"
                           Foreground="#FF0066CC"/>
                </WrapPanel>

                <TextBlock FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center"
                           Text="Lomas:" Margin="0,0,0,10"/>
                <TextBlock FontSize="18" HorizontalAlignment="Center" 
                           Text="{Binding CurrentUserRoles}"
                           Margin="0,0,0,30"
                           Foreground="#FF0066CC"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0"
                        Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock
                           FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"
                           Text="Lietotājvārds"/>
                <TextBox Margin="0,16,0,0" Text="{Binding NewUsername}"
                         FontSize="16" Width="350" HorizontalAlignment="Center" />
                <Button Margin="0,20,0,0"
                        FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Padding="10"
                        Content="Mainīt lietotājvārdu" Command="{Binding SetNewUsername}" />
            </StackPanel>


        <StackPanel Grid.Row="1"
                    Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock
                       FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"
                       Text="Parole"/>
            <PasswordBox Margin="0,16,0,0" FontSize="16" Width="350" HorizontalAlignment="Center"
                         PasswordChanged="OnNewPass1Changed" />
            <PasswordBox Margin="0,16,0,0" FontSize="16" Width="350" HorizontalAlignment="Center"
                         PasswordChanged="OnNewPass2Changed" />
            <Button Margin="0,20,0,0"
                FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Padding="10"
                Content="Mainīt paroli" Command="{Binding SetNewPassword}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
