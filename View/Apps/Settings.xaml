<UserControl x:Class="wpfOs.View.Apps.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpfOs.View.Apps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- Current User Info Section -->
        <StackPanel  Grid.Column="0" Grid.Row="0"
                     Orientation="Vertical" VerticalAlignment="Center">
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" 
                           Text="Sveicināti "/>
                <TextBlock FontSize="28" HorizontalAlignment="Center"
                           Foreground="#FF0066CC"
                           Text="{Binding CurrentUsername}"/>
            </WrapPanel>

            <TextBlock FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center"
                       Text="Lomas:" Margin="0,0,0,10"/>
            <TextBlock FontSize="18" HorizontalAlignment="Center"
                       Margin="0,0,0,40" Foreground="#FF0066CC"
                       Text="{Binding CurrentUserRoles}"/>
        </StackPanel>

        <!-- System Control Buttons -->
        <StackPanel Grid.Column="0" Grid.Row="1"
                    Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"
                       Margin="0,0,0,16"
                       Text="Sistēmas kontrole" />

            <Button Margin="0,5,0,5" FontSize="16" Padding="10,5" HorizontalAlignment="Center"
                    MinWidth="200"
                    Content="Lietotāju pārvaldība" 
                    Command="{Binding NavigateToUserManagementCommand}"
                    Visibility="{Binding UserManagementButtonVisibility}"/>
            <Button Margin="0,5,0,5" FontSize="16" Padding="10,5" HorizontalAlignment="Center"
                    MinWidth="200"
                    Content="Iziet" Command="{Binding LogoutCommand}" />
            <Button Margin="0,5,0,5" FontSize="16" Padding="10,5" HorizontalAlignment="Center"
                    MinWidth="200" Background="#FFDC3545" Foreground="White" 
                    Content="Izslēgt sistēmu" Command="{Binding PoweroffCommand}" />
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="0"
                    Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"
                       Text="Lietotājvārds"/>
            <TextBox Margin="0,16,0,0" FontSize="16" Width="350" HorizontalAlignment="Center"
                     Text="{Binding NewUsername}" />
            <Button Margin="0,16,0,5" FontSize="16" Padding="10,5" HorizontalAlignment="Center"
                    MinWidth="200"
                    Content="Mainīt lietotājvārdu" Command="{Binding SetNewUsername}" />
        </StackPanel>


        <StackPanel Grid.Column="1" Grid.Row="1"
                    Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"
                       Text="Parole"/>
            <PasswordBox Margin="0,16,0,0" FontSize="16" Width="350" HorizontalAlignment="Center"
                         PasswordChanged="OnNewPass1Changed" />
            <PasswordBox Margin="0,16,0,0" FontSize="16" Width="350" HorizontalAlignment="Center"
                         PasswordChanged="OnNewPass2Changed" />

            <Button Margin="0,16,0,5" FontSize="16" Padding="10,5" HorizontalAlignment="Center"
                    MinWidth="200"
                    Content="Mainīt paroli" Command="{Binding SetNewPassword}" />
        </StackPanel>
    </Grid>
</UserControl>
