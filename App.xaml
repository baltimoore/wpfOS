<Application x:Class="wpfOs.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:wpfOs"
             xmlns:v="clr-namespace:wpfOs.View"
             xmlns:va="clr-namespace:wpfOs.View.Apps"
             xmlns:vm="clr-namespace:wpfOs.ViewModel"
             xmlns:vma="clr-namespace:wpfOs.ViewModel.Apps"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:SplashScreenModel}">
            <v:SplashScreen/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LoginFormModel}">
            <v:LoginForm/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <v:Dashboard/>
        </DataTemplate>
        
        <!--
            OS application definitions
          -->
        <DataTemplate DataType="{x:Type vma:TextEditorViewModel}">
            <va:TextEditor/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vma:SettingsViewModel}">
            <va:Settings/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vma:FileManagerViewModel}">
            <va:FileManager/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vma:DomainManagementViewModel}">
            <va:DomainManagement/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vma:DatabaseManagementViewModel}">
            <va:DatabaseManagement/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vma:EmailManagementViewModel}">
            <va:EmailManagement/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vma:StatisticsViewModel}">
            <va:Statistics/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vma:BackupManagementViewModel}">
            <va:BackupManagement/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vma:UserManagementViewModel}">
            <va:UserManagement/>
        </DataTemplate>
        
    </Application.Resources>
</Application>
